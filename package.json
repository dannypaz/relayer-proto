{
  "name": "kinesis-relayer",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "config": {
    "project_name": "relayer"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/kinesis-exchange/relayer"
  },
  "standard": {
    "env": [
      "mocha",
      "chai"
    ]
  },
  "scripts": {
    "prebuild": "bash ./scripts/prebuild.sh",
    "build": "bash ./scripts/build.sh",
    "start": "pm2-docker pm2.json --watch",
    "start-production": "pm2-docker pm2.json --env production",
    "format": "standard --fix",
    "pretest": "npm run format",
    "test": "NODE_PATH=. nyc mocha 'src/**/*.spec.js' 'test/**/*.spec.js'",
    "metrics": "pm2 monit",
    "lup": "npm explore lnd-engine -- docker-compose -p $npm_package_config_project_name up -d",
    "ld": "npm explore lnd-engine -- docker-compose -p $npm_package_config_project_name down -v",
    "lps": "npm explore lnd-engine -- docker-compose -p $npm_package_config_project_name ps"
  },
  "author": "kinesis",
  "license": "UNLICENSED",
  "dependencies": {
    "big-integer": "1.6.27",
    "generate-safe-id": "1.0.2",
    "grpc": "1.10.0",
    "lnd-engine": "github:kinesis-exchange/lnd-engine",
    "mongoose": "5.0.12",
    "mongoose-long": "0.2.0",
    "nano-seconds": "1.2.2",
    "pm2": "2.10.2",
    "redis": "2.8.0",
    "uuid": "3.2.1",
    "winston": "3.0.0-rc3"
  },
  "devDependencies": {
    "chai": "4.1.2",
    "dirty-chai": "2.0.1",
    "eslint": "4.19.1",
    "eslint-plugin-import": "2.11.0",
    "mocha": "5.0.5",
    "mock-require": "3.0.2",
    "mockgoose": "7.3.5",
    "nyc": "11.7.1",
    "pkg": "4.3.1",
    "protobufjs": "6.8.6",
    "rewire": "4.0.1",
    "sinon": "4.5.0",
    "sinon-chai": "3.0.0",
    "standard": "11.0.1"
  }
}
